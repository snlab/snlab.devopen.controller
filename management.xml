<a:application xmlns:a="http://ajax.org/2005/aml">
  <a:bar id="hbox" skin="devopen-toolbar-top" skinset="controllers" class="fakehbox aligncenter controllers_buttons basic">
    <a:button id="btnActivate"
          tooltip  = "Activate"
          icon     = "Activate.png"
          skin     = "devopen-menu-btn"
          skinset  = "controllers"
          class    = "cover activate"
          command  = "activate"
          />
    <a:button id="btnInactivate"
          tooltip  = "Inactivate"
          icon     = "Inactivate.png"
          skin     = "devopen-menu-btn"
          skinset  = "controllers"
          class    = "cover inactivate"
          command  = "inactivate"
           />
    <a:button id="btnDelete"
          tooltip  = "Delete"
          icon     = "Delete.png"
          skin     = "devopen-menu-btn"
          skinset  = "controllers"
          class    = "cover delete"
          command  = "delete"
           />
    <a:divider  skin="devopen-divider" skinset="controllers" style="margin:0 3px 0 3px" />
    <a:button id="btnEdit"
          tooltip  = "Edit controllers info"
          icon     = "Edit.png"
          class    = "cover edit"
          command  = "edit"
          skin     = "devopen-menu-btn"
          skinset  = "controllers" />
    <a:button id="btnManagement"
          tooltip  = "Manage controllers info"
          icon     = "Manage.png"
          class    = "cover manage"
          command  = "manage"
          skin     = "devopen-menu-btn"
          skinset  = "controllers" />
    <a:button id="btnAdd"
          tooltip  = "Add controller"
          icon     = "Add.png"
          class    = "cover add"
          command  = "add"
          skin     = "devopen-menu-btn"
          skinset  = "controllers" />
  </a:bar>
</a:application>
